!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Groo
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
  %body
    %nav.navbar.navbar-inverse
      .container-fluid
        .navbar-header
          %button.navbar-toggle.collapsed{"data-target" => "#bs-example-navbar-collapse-2", "data-toggle" => "collapse", :type => "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{:href => "/"} GROO
        #bs-example-navbar-collapse-2.collapse.navbar-collapse
          %ul.nav.navbar-nav
          %ul.nav.navbar-nav.navbar-right
            -if user_signed_in?
              %li
                = link_to "マイページ",  current_user
              %li
                = link_to "ログアウト",  destroy_user_session_path
            -else
              %li
                = link_to "Sign in with Facebook",  user_facebook_omniauth_authorize_path
    .container
      .row
        .col-md-6.col-md-offset-3
          = yield
