= form_for @thema do |f|
  - if @thema.errors.any?
    #error_explanation
      %h2= "#{pluralize(@thema.errors.count, "error")} prohibited this thema from being saved:"
      %ul
        - @thema.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :genre
    = f.text_field :genre
  .actions
    = f.submit 'Save'
